{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["DOM", "ES2022"],
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "types": ["chrome", "node", "vitest/globals"]
  },
  "include": ["content/**/*.ts", "background/**/*.ts", "core/**/*.ts", "shared/**/*.ts", "options/**/*.ts", "tests/**/*.ts", "vitest.config.ts"]
}
